        select count(*) from es_shop_full_gift where status=0 and type=1
    </select>

    <select id="selectstatus2" resultType="java.lang.Integer">
        select count(*) from es_shop_full_gift where status=0 and type=2
    </select>

    <select id="selectfull" resultType="com.mei.zhuang.entity.marking.EsShopFullGift">
        select * from es_shop_full_gift where status=0 and type=2
    </select>
