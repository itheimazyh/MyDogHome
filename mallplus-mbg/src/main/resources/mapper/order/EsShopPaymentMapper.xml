<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.zhuang.dao.order.EsShopPaymentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mei.zhuang.entity.order.EsShopPayment">
        <id column="id" property="id"/>
        <result column="key" property="key"/>
        <result column="key_cert" property="keyCert"/>
        <result column="private_key" property="privateKey"/>
        <result column="status" property="status"/>
        <result column="type" property="type"/>
        <result column="mch_id" property="mchId"/>
        <result column="public_key" property="publicKey"/>
        <result column="sub_mch_id" property="subMchId"/>
        <result column="appid" property="appid"/>
        <result column="cert" property="cert"/>
        <result column="title" property="title"/>
        <result column="use_count" property="useCount"/>
        <result column="channel_support" property="channelSupport"/>
        <result column="shop_id" property="shopId"/>
        <result column="sub_appid" property="subAppid"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by_id" property="createById"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by_id" property="updateById"/>
        <result column="remain_staus" property="remainStaus"/>
        <result column="is_delete" property="isDelete"/>
        <result column="notify_url" property="notifyUrl"/>
        <result column="pay_type" property="payType"/>
    </resultMap>

    <select id="selectPageList" resultMap="BaseResultMap" parameterType="com.mei.zhuang.vo.order.PaySettingParam">
        select * from es_shop_payment
        where 1=1
        <if test="isDelete == 0">
            and is_delete = 0
        </if>
        <if test="isDelete == 1">
            and is_delete = 1
        </if>
        <if test="isAsc == 0">
            order by id desc
        </if>
        <if test="isAsc == 1">
            order by id asc
        </if>
        limit  #{current} ,#{size}
    </select>


</mapper>
