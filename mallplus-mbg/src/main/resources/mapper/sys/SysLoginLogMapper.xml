<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.zhuang.dao.sys.SysLoginLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mei.zhuang.entity.sys.SysLoginLog">
        <id column="id" property="id"/>
        <result column="login_name" property="loginName"/>
        <result column="login_result" property="loginResult"/>
        <result column="login_desc" property="loginDesc"/>
        <result column="login_time" property="loginTime"/>
        <result column="unlock_flag" property="unlockFlag"/>
    </resultMap>

    <update id="updateUnlockFlagOfSpecifyMinutes">
        UPDATE
        sys_login_log
        SET
        unlock_flag = 1
        WHERE
        login_result = 1
        AND
        login_name = #{loginName}
        AND
        login_time >= #{specifyTime}
    </update>

    <select id="getSpecifyMinutesPasswordErrorCount" resultType="int">
        SELECT
          COUNT(1)
        FROM
          sys_login_log
        WHERE
          login_result = 1
        AND
          unlock_flag = 0
        AND
          login_name = #{loginName}
        AND
          login_time >= #{specifyTime}
    </select>

</mapper>
