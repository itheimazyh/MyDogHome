<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arvato.service.goods.api.orm.dao.EsShopGoodsOptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mei.zhuang.entity.goods.EsShopGoodsOption">
        <id column="id" property="id"/>
        <result column="thumb" property="thumb"/>
        <result column="weight" property="weight"/>
        <result column="display_order" property="displayOrder"/>
        <result column="goods_id" property="goodsId"/>
        <result column="sales" property="sales"/>
        <result column="shop_id" property="shopId"/>
        <result column="title" property="title"/>
        <result column="goods_code" property="goodsCode"/>
        <result column="price" property="price"/>
        <result column="specs" property="specs"/>
        <result column="stock" property="stock"/>
        <result column="productsn" property="productsn"/>
        <result column="stock_warning" property="stockWarning"/>
        <result column="color_test_code" property="colorTestCode"/>
        <result column="suit_code" property="suitCode"/>
        <result column="is_default" property="isDefault"/>
        <result column="spec_ids" property="specIds"/>
    </resultMap>
    <update id="decrSkuStock">
        update es_shop_goods_option
        set virtual_stock = virtual_stock - #{count}
        where id = #{id}
        and virtual_stock &gt;= #{count}
    </update>
    <update id="addSkuStock">
        update es_shop_goods_option
        set virtual_stock = virtual_stock + #{count}
        where id = #{id}
    </update>
    <delete id="deletes">
        delete from es_shop_goods_option where goods_id=#{id}
    </delete>
    <select id="selectOption" resultType="com.mei.zhuang.entity.goods.EsShopGoodsOption">
        select * from es_shop_goods_option where goods_id=#{goodsId} order by id asc
    </select>
    <!--带分页-->
    <select id="selPageList" resultType="com.mei.zhuang.entity.goods.EsShopGoodsOption">
        select * from es_shop_goods_option where goods_id=#{goodsId} order by id asc
    </select>
    <select id="selOption" resultType="com.mei.zhuang.entity.goods.EsShopGoodsOption">
         select * from es_shop_goods_option where specs like concat(concat('%',#{specs},'%'))
    </select>
    <select id="selectLikeSpecIds" resultType="com.mei.zhuang.entity.goods.EsShopGoodsOption">
        select * from es_shop_goods_option where spec_ids like concat(concat('%',#{id},'%'))
    </select>
</mapper>
