<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.zhuang.dao.sys.CrmSysRoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mei.zhuang.entity.sys.CrmSysRoleMenu">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="menu_id" property="menuId"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_date" property="createDate"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectCountByRoleIds" resultType="int">
        SELECT
        COUNT(0)
        FROM
        CRM_SYS_ROLE_MENU
        WHERE
        role_id IN
        <foreach collection="roleIds" index="index" item="i" open="(" separator="," close=")">
            #{i}
        </foreach>
    </select>

    <select id="crmSysRoleMenu" resultType="com.mei.zhuang.entity.sys.CrmSysRoleMenu">
        SELECT
        *
        FROM
        CRM_SYS_ROLE_MENU
        WHERE
        role_id IN
        <foreach collection="roleIds" index="index" item="i" open="(" separator="," close=")">
            #{i}
        </foreach>
    </select>

</mapper>
