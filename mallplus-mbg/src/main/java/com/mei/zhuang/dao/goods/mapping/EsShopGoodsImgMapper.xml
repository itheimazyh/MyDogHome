<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.zhuang.dao.goods.EsShopGoodsImgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mei.zhuang.entity.goods.EsShopGoodsImg">
        <id column="id" property="id"/>
        <result column="img_group_id" property="imgGroupId"/>
        <result column="img_address" property="imgAddress"/>
    </resultMap>
    <!--删除图片-->
    <delete id="delImg">
        delete from es_shop_goods_img where id=#{id}
    </delete>

    <!--查询图片列表-->
    <select id="selImg" resultType="com.mei.zhuang.entity.goods.EsShopGoodsImg">
        select * from es_shop_goods_img
        where
        1=1
        <if test="imgGroupId != null">
           and  img_group_id=#{imgGroupId}
        </if>
        <if test="imgName != null">
            and  img_name like concat(concat('%',#{imgName},'%'))
        </if>
        order by id desc
    </select>

    <select id="selCountImg" resultType="java.lang.Integer">
        select  count(1) from es_shop_goods_img
        where 1=1
        <if test="imgGroupId != null">
            and  img_group_id=#{imgGroupId}
        </if>
        <if test="imgName != null">
            and  img_name like concat(concat('%',#{imgName},'%'))
        </if>
    </select>
    <select id="selImgs" resultType="com.mei.zhuang.entity.goods.EsShopGoodsImg">
        select * from es_shop_goods_img where img_group_id=#{groupId}
    </select>


</mapper>
